{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@media": ["./src/styles/mixins/media.scss"],
      "@fontStyle": ["./src/styles/mixins/fontStyle.scss"],
      "@images/*": ["./public/images/*"],
      "@icons/*": ["./public/icons/*"],
      "@svg/*": ["./public/svg/*"],
      "@sprites/*": ["./public/sprites/*"],
      "@store/*": ["./src/store/*"],
      "@imagesGame/*": ["./src/game/assets/images/*"],
			"@sheetsGame/*": ["./src/game/assets/sheets/*"],
			"@entitiesGame/*": ["./src/game/assets/entities/*"],
			"@audioGame/*": ["./src/game/assets/audio/*"]
    }
  },
  "include": ["src", "src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
